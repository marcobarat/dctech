<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          controllerName="myapp.controller.Tmp">
    <Page title="{locale>myapp.view.tmp.title}">
        <headerContent>
            <Button icon="sap-icon://arrow-left" press="onNavBack" text="{locale>myapp.view.tmp.back}"
                    ariaLabelledBy="exitButtonLabel" class="sapUiSmallMarginEnd"/>
        </headerContent>
        <content>
            
            <SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
                <detailPages>
                    <Page id="detail" title="Dettagli processo" class="sapUiStdPage">
                        <content>
                            <Label text="Detail page 1" />
                        </content>
                    </Page>
                </detailPages>
                <masterPages>
                    <Page id="master" title="Processi" icon="sap-icon://action" class="sapUiStdPage">
                        <content>
                            <l:VerticalLayout class="sapUiContentPadding">
                                <Button text="Presa in carico nuovo confezionamento" height="200px" width="300px" />
                                <Button text="Fine predisposizione inizio confezionamento" height="200px" width="300px"/>
                            </l:VerticalLayout>
                        </content>
                    </Page>
                </masterPages>
            </SplitApp>
            
            
            
            

