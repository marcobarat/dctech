<core:FragmentDefinition
    controllerName="myapp.controller.ManagePianoGrey"
    id="AskClosing"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table">
    <Dialog contentWidth="1020px" contentHeight="320px" id="AskClosing" showHeader="false">
        <FlexBox alignItems="Start" justifyContent="Center">
            <VBox height="300px" width="1000px">
                <VBox height="48px"/>
                <VBox height="60px">
                    <FlexBox alignItems="Start" justifyContent="Center">
                        <Text text="Chiusura confezionamento" class="textTop"/>
                    </FlexBox>
                </VBox>
                <VBox height="60px"/>
                <VBox height="90px">
                    <HBox>
                        <VBox width="70px"/>
                        <VBox width="400px">
                            <Button text="Annulla" width="400px" press="AnnullaChiusuraConfezionamento" class="annullaButtonDialog textButtonsDialog"/>
                        </VBox>
                        <VBox  width="60px">
                            <Text/>
                        </VBox>
                        <VBox width="400px">
                            <Button text="Conferma" width="400px" press="ConfermaChiusuraConfezionamento" class="confermaButtonDialog textButtonsDialog"/>
                        </VBox>
                        <VBox width="70px"/>
                    </HBox>
                </VBox>
                <VBox height="42px"/>
            </VBox>
        </FlexBox>
    </Dialog>
</core:FragmentDefinition>

