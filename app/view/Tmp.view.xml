<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table" xmlns:u="sap.ui.unified"

          controllerName="myapp.controller.Tmp">
    <Page title="{locale>myapp.view.tmp.title}">
        <headerContent>
            <Button icon="sap-icon://arrow-left" press="onNavBack" text="{locale>myapp.view.tmp.back}"
                    ariaLabelledBy="exitButtonLabel" class="sapUiSmallMarginEnd"/>
        </headerContent>
        <content>
            
            <SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
                <detailPages>
                    <Page id="Home" title="De Cecco" class="sapUiStdPage">
                        <content>
                                <Image
                                    src="{img/dececco}"
                                    densityAware="false"
                                    width="{/imageWidth}" >
                                    <layoutData>
                                        <FlexItemData growFactor="1" />
                                    </layoutData>
                                </Image>
                        </content>
                    </Page>
                    <Page id="PresaInCarico" title="Presa in carico nuovo confezionamento" class="sapUiStdPage">
                        <content>
                            <t:TreeTable
                                id="TreeTableBasic"
                                rows="{path:'/', parameters: {arrayNames:['categories']}}"
                                selectionMode="MultiToggle"
                                collapseRecursive="true"
                                enableSelectAll="false"
                                ariaLabelledBy="title">
                                <t:toolbar>
                                    <Toolbar>
                                        <Title id="title" text="Clothing"/>
                                        <ToolbarSpacer/>
                                        <Button text="Collapse all" press="onMiao"/>
                                        <Button text="Expand all" press="onExpandFirstLevel"/>
                                    </Toolbar>
                                </t:toolbar>
                                <t:columns>
                                    <t:Column width="13rem">
                                        <Label text="Categories"/>
                                        <t:template>
                                            <Text text="{name}" wrapping="false" />
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="9rem">
                                        <Label text="Price"/>
                                        <t:template>
                                            <u:Currency value="{amount}" currency="{currency}"/>
                                        </t:template>
                                    </t:Column>
<!--                                    <t:Column width="11rem">
                                        <Label text="Size"/>
                                        <t:template>
                                            <Select
                                                items="{path: '/sizes', templateShareable: true}"
                                                selectedKey="{size}"
                                                visible="{= !!${size}}"
                                                forceSelection="false">
                                                <core:Item key="{key}" text="{value}"/>
                                            </Select>
                                        </t:template>-->
                                    <!--</t:Column>-->
                                </t:columns>
                            </t:TreeTable>
                        </content>
                    </Page>
                    <Page id="FinePredisposizione" title="Fine predisposizione inizio confezionamento" class="sapUiStdPage">
                        <content>
                            <VBox class="sapUiSmallMargin">
                                <Label text="This is Detail Page2" />
                            </VBox>
                        </content>
                    </Page>
                </detailPages>
                <masterPages>
                    <Page id="processi" title="Processi" icon="sap-icon://action" class="sapUiStdPage">
                        <content>
                            <VBox height="100%" width="100%">
                                <VBox height="60%" width="100%">
                                    <Button text="Presa in carico nuovo confezionamento" enabled="true" pressed="true" press="PresaInCarico">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Button>
                                    <Button text="Fine predisposizione inizio confezionamento" enabled="true" pressed="true" press="FinePredisposizione">
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Button>
                                </VBox>
                                <VBox height="10%" width="100%">
                                    <MessageStrip text="Attrezzaggio" class="sapUiTinyMargin" />
                                </VBox>
                                <VBox height="30%" width="100%">
                                    <Button text="Attrezzaggio1" enabled="true" pressed="true" width="300px" >
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Button>
                                    <Button text="Attrezzaggio2" enabled="true" pressed="true" width="300px" >
                                        <layoutData>
                                            <FlexItemData growFactor="1" />
                                        </layoutData>
                                    </Button>
                                </VBox>
                            </VBox>
                        </content>
                    </Page>
                </masterPages>
            </SplitApp>
            
            
            
            

            <!--Table items="{/Invoices}">
                <columns>
                    <Column width="11rem" hAlign="Center">
                        <Text text="Invoice name" />                        
                    </Column>
                    <Column width="11rem" hAlign="Center">
                        <Text text="Invoice quantity" />                      
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Label text="{ProductName}" />
                            <Label text="{Quantity}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table-->

        </content>
    </Page>
</mvc:View>